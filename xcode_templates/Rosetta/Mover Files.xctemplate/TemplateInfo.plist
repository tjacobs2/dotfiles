<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Platforms</key>
	<array>
		<string>com.apple.platform.macosx</string>
	</array>
	
	<key>AllowedTypes</key>
	<array>
		<string>public.c-plus-plus-source</string>
		<string>public.c-plus-plus-header</string>
	</array>
	
	<key>DefaultCompletionName</key>
	<string>File</string>
	
	<key>Description</key>
	<string>Rosetta C++ source, header and forward header files.</string>
	
	<key>Kind</key>
	<string>Xcode.IDEKit.TextSubstitutionFileTemplateKind</string>
	
	<key>MainTemplateFile</key>
	<string>___FILEBASENAME___.cc</string>
	
	<key>CounterpartTemplateFile</key>
	<string>___FILEBASENAME___.hh</string>
	
	<key>CounterpartTemplateFile</key>
	<string>___FILEBASENAME___.fwd.hh</string>

	<key>CounterpartTemplateFile</key>
	<string>___FILEBASENAME___Creator.hh</string>
	
	<key>Summary</key>
	<string>Create a Rosetta source file, header file and forward header file</string>
</dict>
</plist>
